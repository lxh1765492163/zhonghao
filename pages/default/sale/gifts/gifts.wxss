/* pages/default/sale/gifts/gifts.wxss */
.gifts {
  font-size: 35rpx;
  width: 100%;
  margin-top: 20rpx;
  border-top: solid 1rpx #ddd;
}

.gifts .goods {
  display: flex;
  padding: 30rpx 30rpx 50rpx;
  background: white;
  border-bottom: solid 1rpx #ddd;
}

.gifts .goods image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;

}

.gifts .goods .title{
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 20rpx;
}

.gifts .goods .price{
  flex: 1;
  text-align: right;
  line-height: 45rpx;
}

