/* pages/default/bargain/detail/detail.wxss */

.content {
  padding-bottom: 120rpx;
  font-size: 35rpx;
}

.content .banner {
  position: relative;
}

.content .banner .downtime {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: right;
  padding: 5rpx;
  background: rgba(0, 0, 0, 0.4);
  color: white;
}

.content .sale {
  background: #ff605d;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 10rpx;
}

.content .sale .price {
  font-size: 40rpx;
}

.content .sale .times {
  background: rgba(0, 0, 0, 0.3);
  font-size: 30rpx;
  padding: 3rpx 25rpx;
  border-radius: 25rpx;
}

.content .info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: white;
  padding: 20rpx;
}

.oneline {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 500rpx;
}

.content .info .maintitle {
}

.content .info .vicetitle {
  color: #a6a6a6;
  font-size: 28rpx;
}

.content .info .bargainrule {
  text-align: center;
  padding-left: 20rpx;
  margin-left: 40rpx;
  border-left: solid 3rpx #ddd;
  color: #777;
  font-size: 28rpx;
}

.content .process {
  background: white;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.content .process .titlebar {
  margin: 20rpx;
  padding-top: 20rpx;
  border-bottom: solid 1rpx #ddd;
}

.content .process .processimg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.content .process .processimg .child {
  position: relative;
  width: 100%;
  height: 180rpx;
  font-size: 25rpx;
}

.content .process .processimg .child .step {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0 auto;
  background: #a6a6a6;
  border-radius: 50%;
  color: white;
}

.content .process .processimg .child .text {
  padding: 30rpx 50rpx;
  color: #a6a6a6;
  border: dashed 1rpx #a6a6a6;
  border-radius: 20rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
}

.content .process .processimg .icon-right {
  color: #a6a6a6;
}

.content .detail {
  background: white;
}

.content .detail .titlebar {
  display: inline-block;
  padding: 10rpx 10rpx;
  margin: 0 20rpx 10rpx;
  border-bottom: solid 3rpx #fd5454;
}

.tabbar {
  height: 110rpx;
  width: 100%;
  background: white;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  text-align: center;
  z-index: 9999;
}

.tabbar .buy {
  height: 90rpx;
  line-height: 90rpx;
  width: 26%;
  margin: 0 2%;
  border: solid 1rpx #d54a47;
  border-radius: 10rpx;
  color: #d54a47;
}

.tabbar .bargain {
  height: 90rpx;
  line-height: 90rpx;
  width: 26%;
  margin: 0 2%;
  background: #d54a47;
  border-radius: 10rpx;
  color: white;
}

.tabbar .child {
  width: 20%;
  font-size: 25rpx;
  line-height: normal;
}

.tabbar .child .icon {
  font-size: 40rpx;
}
