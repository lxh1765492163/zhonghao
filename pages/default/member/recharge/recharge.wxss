/* recharge.wxss */

.box {
      font-size: 32rpx;
      color: #666;
}

.box .title {
      width: 100%;
      height: 100rpx;
      line-height: 100rpx;
      font-size: 36rpx;
      text-align: center;
      border-bottom: 1px solid #ebebeb;
      position: relative;
      background: #f7f7f7;
}

.box .title image {
      width: 60rpx;
      height: 60rpx;
      position: absolute;
      top: 20rpx;
      left: 20rpx;
}

.box .recharge {
      margin-top: 30rpx;
      background: #fff;
      padding-left: 40rpx;
      line-height: 100rpx;
      border-top: 1px solid #ebebeb;
      border-bottom: 1px solid #ebebeb;
}

.box .recharge .recharge_item {
      height: 100rpx;
      overflow: hidden;
      border-bottom: 1px solid #ebebeb;
      position: relative;
}

.box .recharge .recharge_item:last-child {
      border-bottom: none;
}

.box .recharge .recharge_item text, input {
      float: left;
}

.box .recharge .recharge_item text.balance {
      margin-left: 40rpx;
      color: #000;
}

.box .recharge .recharge_item input {
      height: 100rpx;
      line-height: 100rpx;
      position: absolute;
      left: 170rpx;
      color: #000;
}

.box .activity {
      display: flex;
      width: 100%;
      font-size: 30rpx;
}

.box .activity .acts {
      flex: 1;
      margin-top: 30rpx;
      padding: 30rpx 20rpx 0 20rpx;
      border-right: 1px solid #ebebeb;
      border-top: 1px solid #ebebeb;
      border-bottom: 1px solid #ebebeb;
}

.box .activity .acts .integral {
      padding: 20rpx 0rpx 20rpx 15rpx;
}

.sub {
      width: 90%;
      height: 100rpx;
      line-height: 100rpx;
      font-size: 40rpx;
      margin: 30rpx auto;
}
