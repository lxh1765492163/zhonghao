.box{
    font-size: 32rpx;
}

.box .title{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    text-align: center;
    border-bottom: 1px solid #ebebeb;
    position: relative;
    background: #f7f7f7;
}

.box .title image{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 20rpx;
    left: 20rpx;
}

.box .header{
    width: 100%;
    height: 160rpx;
    margin-top: 40rpx;
    background: #fff;
    border-top: 1px solid #ebebeb;
    border-bottom: 1px solid #ebebeb;
    position: relative;
}

.box .header .head_img{
    height: 100%;
    font-size: 40rpx;
    line-height: 160rpx;
    overflow: hidden;
}

.box .header .head_img image{
    width: 120rpx;
    height: 120rpx;
    display: block;
    float: left;
    margin-top: 20rpx;
    margin-left: 35rpx;
}

.box .header .head_img text{
    display: block;
    float: left;
    margin-left: 30rpx;
}

.box .header image.arrow{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: 15rpx;
    top: 50rpx;
}

.box .info{
    margin-top: 30rpx;
    background: #fff;
    padding-left: 40rpx;
    line-height: 100rpx;
    border-top: 1px solid #ebebeb;
    border-bottom: 1px solid #ebebeb;
}


.box .info .info_item{
    height: 100rpx;
    overflow: hidden;
    border-bottom: 1px solid #ebebeb;
    position: relative;
}

.box .info .info_item:last-child{
    border-bottom: none;
}

.box .info .info_item image.star{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 38rpx;
    left: 150rpx;
}

.box .info .info_item text,input{
    float: left;
}

.box .info .info_item input{
    height: 100rpx;
    line-height: 100rpx;
    position: absolute;
    left: 180rpx;
}

.sub{
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 40rpx;
    margin: 30rpx auto;
}