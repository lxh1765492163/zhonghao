/* pages/default/agent/index/index.wxss */

.agent-page {
  font-size: 35rpx;
}

.agent-page .agent-user {
  display: flex;
  align-items: center;
  padding: 35rpx 25rpx;
}

.agent-user image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.agent-page .agent-bonus {
  background: #f90;
  padding: 40rpx 0 20rpx;
  color: white;
}

.agent-bonus :nth-child(3) text {
  margin: 0 10rpx;
  opacity: 0.7;
}

.bonus-details .option {
  display: flex;
  align-content: flex-start;
  flex-wrap: wrap;
}

.option .op {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: solid 1rpx #f3f3f3;
  border-left: solid 1rpx #f3f3f3;
  font-size: 30rpx;
}
.option .op view:nth-child(1) {
  font-size: 60rpx;
} 
.option .op view:nth-child(3) {
  color: #FDBF39;
}
