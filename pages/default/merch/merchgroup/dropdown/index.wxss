.dropdown{
    width: 100%;
    margin-top: 20rpx;
    position: relative;
}

.dropdown .dropdownmenu{
    width: 100%;
    height: 80rpx;
    background: #ffffff;
    padding: 0;
    line-height: 80rpx;
    overflow: hidden;
    border-bottom: 1px solid #dbdbdb;
    font-weight: bold;
}

.dropdown .dropdownmenu .item{
    width: 100%;
    height: 100%;
    font-size: 30rpx;
    overflow: hidden;
    position: relative;
}

.dropdown .dropdownmenu .item text{
   display: block;
}

.dropdown .dropdownmenu .item text.current{
    width: 25%;
    float: left;
    text-align: center;
}

.dropdown .dropdownmenu .item text.title{
    width: 70%;
    float: left;
    font-weight: normal;
    
}

.dropdown .dropdownmenu .item image{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    right: 30rpx;
    margin-top: -20rpx;
    
}


.dropdown .dropdownlist{
    width: 100%;
    line-height: 90rpx;
    position: absolute;
    background: #fff;
    z-index: 100;
}

.dropdown .dropdownlist text{
    display: block;
    border-bottom: 1px solid #eee;
    padding-left: 25rpx;
}