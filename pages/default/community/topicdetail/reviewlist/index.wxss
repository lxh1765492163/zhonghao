.reviewlist{
    width: 96%;
    margin: 0 2%;
    padding: 20rpx 0;
    border-bottom: 1px solid #dbdbdb;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    font-size: 30rpx;
    background: #FFFFFF;
}
.reviewlist:last-child{

}
.reviewlist .userImg{
    width: 17%;
    height: auto;
    overflow: hidden;
}

.reviewlist .userImg image{
    width: 105rpx;
    height: 105rpx;
    display: block;
    border-radius: 50%;
}

.reviewlist .userInfo{
    width: 83%;
    height: auto;
    overflow: hidden;
    position: relative;
    padding-top: 10rpx;
}

.reviewlist .userInfo .releasetime{
    position: absolute;
    right: 0;
    top: 10rpx;
    color: #333;
    font-size: 28rpx;
}

.reviewlist .userInfo .identity{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.reviewlist .userInfo .identity text{
    display: inline-block;
    width: auto;
    margin-right: 10rpx;
    text-align: center;
}

.reviewlist .userInfo .identity .name{
    font-weight: bold;
    color: #666;
}

.reviewlist .userInfo .identity .mark{
    padding: 3rpx 8rpx;
    background: #eeeeee;
}

.reviewlist .userInfo .identity .landlord{
    padding: 4rpx 8rpx;
    color: #FFF;
    background: #f04950;
    border-radius: 3rpx;
}

.reviewlist .userInfo .identity .moderator{
    background: #fd9421;
}

.reviewlist .userInfo .article{
    width: 98%;
    padding-top: 10rpx;
    font-size: 32rpx;
    line-height: 46rpx;
}

.reviewlist .userInfo .comment{
    margin-top: 15rpx;
    color: #666;
}

.reviewlist .userInfo .comment .aite{
    color: #f77253;
}

.reviewlist .userInfo .comment .com-img{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.reviewlist .userInfo .comment .com-img image{
    width: 30%;
    height: 160rpx;
    margin-right: 1%;

}

.reviewlist .userInfo .handle{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    text-align: right;
    margin-top: 25rpx;
   
}

.reviewlist .userInfo .handle .reply{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    color: #666;
}

.reviewlist .userInfo .handle .reply image{
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}