@import "userinfo_com/index.wxss";
@import "topic/index.wxss";
@import "reviewlist/index.wxss";

.com-title {
    width: 96%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    padding: 0 2%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-top: 1px solid #dbdbdb;
    border-bottom: 1px solid #dbdbdb;
}

.com-title image {
    width: 34rpx;
    height: 34rpx;
    margin-right: 15rpx;
}

.tabbar {
    text-align: center;
    width: 100%;
    border-top: solid 1rpx #ddd;
    background: white;
    position: fixed;
    bottom: 0;
    right:0;
    z-index: 2;
    display: flex;
    align-items: stretch;
    justify-content: space-between;
}
.tabbar navigator {
     padding: 25rpx 0;
    flex: 1;
    font-size: 30rpx;
    color: #999;
}
.tabbar view {
    padding: 25rpx 0;
    flex: 1;
    font-size: 30rpx;
    color: #999;
}
