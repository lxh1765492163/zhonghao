/* pages/community/complaint/complaint.wxss */

.complaint {
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx;
  font-size: 35rpx;
}

.complaint text {
  margin: 20rpx 0;
}

.complaint .notAlready {
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  border: solid 1rpx #999;
  color: #999;
  margin-right: 30rpx;
  font-size: 25rpx;
}

.complaint .already {
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  border: solid 1rpx #ee7600;
  color: #ee7600;
  margin-right: 30rpx;
  font-size: 25rpx;
}

.complaint textarea {
  width: 100%;
  padding: 20rpx 0;
  margin-top: 40rpx;
  border-bottom: solid 1rpx #ddd;
  border-top: solid 1rpx #ddd;
}

.complaint .submit {
  width: 98%;
  background: #ee7600;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 10rpx;
  margin: 100rpx auto;
  color: white;
}
