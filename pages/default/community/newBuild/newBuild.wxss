.img{
    width:100rpx;
    height:80rpx;
}
.openimg{
    position:relative;
    width:100%;
    margin-bottom:140rpx;
}
.title{
    margin-left: 35rpx;
    font-size: 32rpx;
    font-weight: 700;
    padding-top: 30rpx;
    display: flex;
    flex-direction: row;
}
.title view{
 margin-top:20rpx;
}
.title image{
    display:block;
    /* margin-left:100rpx; */
    width:70rpx;
    height:60rpx;
    margin-top:16rpx;
}
.openimg .del{
    width:40rpx;
    height:40rpx;
    background:#ddd;
    text-align: center;
    border-radius: 40rpx;
    position:absolute;
    left:110rpx;
    top:10rpx;
}
.openimg image{
    width:100rpx;
    height:100rpx;
    float:left;
    margin-left:30rpx;
     margin-top:10rpx; 
    border:1px dashed #ccc;
}
.newBuild {
  display: flex;
  flex-direction: column;
  margin: 15rpx 25rpx;
  font-size: 35rpx;
}

.newBuild input {
  padding: 15rpx 0;
  border-bottom: solid 1rpx #ddd;
}

.newBuild textarea {
  padding: 20rpx 0;
  width: 100%;
  border-bottom: solid 1rpx #ddd;
}

