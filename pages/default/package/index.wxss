/* pages/default/package/index.wxss */
.list {
  margin:20rpx 0rpx;
  border-top: 1px solid #ccc;
  padding-bottom: 120rpx;
}
.good {
  width: 94%;
  height: 140rpx;
  padding: 30rpx 3%;
  background: #fff;
  border-bottom: 1px solid #ccc;
  clear: both;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.good .img {
  width: 140rpx;
  height: 140rpx;
}

.good .img image {
  width: 100%;
  height: 100%;
}

.title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin:15rpx 35rpx 15rpx 25rpx;
}

.price  {
  font-size: 35rpx;
  color: #ef4f4f;
  text-align: right;
}

.num {
  font-size: 35rpx;
  text-align: right;
  margin-top: 20rpx;
}

.discount{
  background: white;
  padding: 30rpx;
  text-align: center;
  font-size: 35rpx;
}
.discount text{
 color: #ef4f4f;
}

.buy {
  width: 100%;
  height: 110rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  font-size: 40rpx;
}

.buy .buy_left {
  display: inline-block;
  height: 110rpx;
  line-height: 110rpx;
  width: 50%;
  padding-left: 30rpx;
  font-weight: 400;
}

.buy text:nth-child(2) {
  color: #ef4f4f;
  font-size: 38rpx;
}

.buy_right {
  width: 40%;
  height: 110rpx;
  background: #ef4f4f;
  color: #fff;
  float: right;
  line-height: 110rpx;
  text-align: center;
}
