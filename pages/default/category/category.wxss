@import '../diymenu/diymenu.wxss';
image{
    height:300rpx;
}
page{
  background: #f5f5f5;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}
.nav_left{

  width: 22%;

  background: #FAFAFA;
  float:left;
  text-align: center;
  overflow-y: scroll;
}


.nav_left .nav_left_items{
  height: 30px;
  line-height: 30px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
}
.nav_left .nav_left_items.active{
  background: #fff;
  border-left: 0.2rem solid #fd5454;
  color: #fd5454;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nav_right{
 float:left;
  flex: 1;
  width: 78%;
  background: #fff;
  box-sizing: border-box;
}
.nav_right .nav_right_items{
  float: left;
  width: 33.33%;
  height: 80px;
  text-align: center;
  margin: 8px 0;
}
.nav_right .nav_right_items image{
  width: 56px;
  height: 40px;
}
.nav_right .nav_right_items text{
  display: block;
  margin-top: 5px;
  font-size: .7rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.banner image {
  width: 100%;
}

.nodata {
  font-size: .8rem;
}


.nav_right .nav_right_goods{
  float: left;
  width: 49%;
  box-sizing: border-box;
  background: #fbfbfb;
  /* height: 180rpx; */
  /* margin: 8px 0; */
  color: #000;
  margin-bottom: 15rpx;
  padding-bottom:20rpx;
  
  border: 2px solid #f5f5f5;
}

.nav_right .nav_right_goods:nth-child(odd){
    margin-right: 2%;
}

.nav_right .nav_right_goods image{
    display: block;
    
    width: 100%;
    height: 240rpx;
    
}

.nav_right .nav_right_goods .detail{
  width: 95%;
  font-size: 30rpx; 
  font-weight: normal;
  color:#666666;
  font-family:MicrosoftYaHei;
  padding-left: 5%;
  margin-top: 20rpx;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.nav_right .nav_right_goods .detail text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.nav_right .nav_right_goods .price{
  width: 94%;
  font-size: 38rpx; 
  font-weight: bold;
  padding-left: 6%;
  margin-top: 20rpx;
  color: #ed2822;
}

.nav_right .nav_right_goods .price text{
    font-size: 30rpx;
}

.nav_left .nav_left_items{
  height: 30px;
  line-height: 30px;

  text-align: center;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  border-bottom: 1px solid #FAFAFA;
  font-size: 12px;
}