/* pages/testpaper/detail/detail.wxss */

.paper_detail {
  font-size: 30rpx;
}

.paper_detail .title {
  padding: 40rpx 30rpx;
  border-bottom: solid 15rpx #f6f6f6;
}

.paper_detail .info {
  display: flex;
  padding-bottom: 30rpx;
}

.info .child {
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #999;
}

.child view {
  padding: 15rpx 0;
}

.paper_detail .select {
  display: flex;
  align-items: flex-start;
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  color: white;
  padding: 30rpx 10rpx;
}

.select text {
  padding: 0 10rpx;
}

.select view {
  flex: 1;
  padding: 25rpx 0;
  margin: 0 15rpx;
  border-radius: 10rpx;
}

.select view:nth-child(1) {
  background: linear-gradient(#409aff, #44caff);
  box-shadow: 5rpx 5rpx 5rpx #378fff;
}

.select view:nth-child(2) {
  background: linear-gradient(#feb856, #ffcf3f);
  box-shadow: 5rpx 5rpx 5rpx #f3bb20;
}

.paper_detail .present {
  padding-bottom: 30rpx;
  color: #999;
}

.present view {
  padding: 15rpx 30rpx;
  display: flex;
}

.present .icon {
  height: 30rpx;
  width: 10rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}

.paper_detail .detail {
  margin-top: 20rpx;
}

.detail view:nth-child(1) {
  padding: 5rpx 30rpx;
  background: #f3f3f3;
  color: #999;
}

.detail view:nth-child(2) {
  padding: 30rpx;
}
