/* pages/default/bespoke/beautician/beautician.wxss */

/*使屏幕变暗  */
.screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.box {
  height: 300rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.box image{
  float:left;
  width:200rpx;
  height:130rpx;
  border-radius: 10rpx;
  margin-left:30rpx;
  margin-top:20rpx;
}
.box .name{
  float:left;
  width:400rpx;
  font-size:30rpx;
  height:40rpx;
  margin:40rpx 0 10rpx 30rpx;
}
.content{
  width:100%;
  height:380rpx;
  border-bottom:1px solid #ccc;
  background:#fff; 
  margin-top:10rpx;
}
.content image{
  width:150rpx;
  height:150rpx;
  border-radius: 150rpx;
  margin-top:30rpx;
  margin-left:30rpx;
  float:left;
}
.content .stro{
  float:left;
  font-size:34rpx;
  margin-top:30rpx;
  margin-left:30rpx;
  width:72%;
}
.content .stro view:nth-child(2){
  color:#ccc;
  font-size:28rpx;
}
.content .stro view:nth-child(3){
  color:#acacac;
  margin-top:20rpx;
}
.timeDay{
  color:#FD666F;
  width:100%;
  text-align: center;
  height:60rpx;
  line-height: 50rpx;
}
.ytime{
  width:100%;
  text-align: center;

}
.kx{
  display:inline-block;
  width:100%;
  text-align: center;
    color:#FD666F;
}
.timelist{
  width:20%;
  height:100rpx;
  /* background:blue; */
  border-radius:8rpx;
  margin:10rpx 10rpx 10rpx 10rpx;
  float:left;
  border:1px solid #979797;
  margin-left:20rpx;
}
