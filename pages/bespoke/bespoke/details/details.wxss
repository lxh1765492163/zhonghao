/* pages/default/bespoke/details/details.wxss */
/*使屏幕变暗  */
.screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.box {
  height: 500rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.box image{
  float:left;
  width:200rpx;
  height:130rpx;
  border-radius: 10rpx;
  margin-left:30rpx;
  margin-top:20rpx;
}
.box .name{
  float:left;
  width:400rpx;
  font-size:30rpx;
  height:40rpx;
  margin:40rpx 0 10rpx 30rpx;
}
image{
  width:100%;
  height:100%;
}
.price{
   height:40rpx;
}
.price .rmb{
  font-size:30rpx;
  color:#fe6672;
  margin-left:30rpx;
}
.price .nowprice{
  font-size:38rpx;
  color:#fe6672;
  font-weight: 700;
}
.price .time{
  font-size:30rpx;
  color:#acacac;
  margin-left:30rpx;
}
.serve{
  clear:both;
  width:100%;
  height:100rpx;
  margin-top:20rpx;
}
.service{
  width:330rpx;
  height:80rpx;
  background:#ececec;
  color:#000;
  border-radius: 10rpx;
  font-size:34rpx;
  text-align: center;
  line-height:80rpx;
  float:left;
  margin-top:30rpx;
  margin-left:30rpx;
  border:1px solid #acacac;
}
.ac{
  background:#fe6672;
  border:1px solid #fe6672;
 color:#fff;
}
.serve_title{
  padding:20rpx 0 0 30rpx;
  clear:both;
  font-size:28rpx;
  overflow:hidden;
}
.serve_title text{
  display:block;
}
.box .butt{
  border-radius: 0;
  position:absolute;
  bottom:0;
  width:100%;
}
swiper{
  height:580rpx;
}
.details{
  width:100%;
  height:120rpx;
  background:#fff;
  border-bottom:1px solid #ccc;
}
.detail{
  width:80%;
  height:120rpx;
  margin-left:8%;
  /* background:blue; */
}
.detail .detail_title{
  font-size:30rpx;
  color:#acacac;
}
.detail .detail_price{
  font-size:40rpx;
  font-weight: 700;
  color:#fe6672;
}
.detail .detail_price .costprice{
  font-size:34rpx;
  font-weight: 400;
  text-decoration:line-through;
  color:#acacac;
}
.item_desc{
  height:150rpx;
  width:100%;
  background:#fff;
}
.item_desc .tags{
  font-size:32rpx;
  margin-left:50rpx;
  padding-top:20rpx;
}
.item_desc .tags text{
  display:inline-block;
  border:1px solid #ececec;
  border-radius: 20rpx;
  padding:5rpx 10rpx;
  background:#f6f6f6;

}
.item_desc .online{
  font-size:30rpx;
  margin-left:40rpx;
  margin-top:20rpx;
}
.item_desc .online .door{
  background:#ffc573;
  color:#fff;

}
.item_desc .online .store{
  background:#fe6672;
  color:#fff;
  margin-left:20rpx;
}
.detail_tab {
    height:90rpx;
    width:100%;
}
.detail_tab view{
  width:50%;
  text-align:center;
  height:90rpx;
  line-height:90rpx;
  float:left;
  font-size:36rpx;
}
.detail_tab .active{
  border-bottom:1px solid #fe6672;
}
.detail_content{
  clear: both;
}
.detail_content .detail_item{
  margin:0 40rpx;
  font-size:36rpx;
  border-bottom:1px solid #ccc;
}
.detail_content .detail_item view{
  height:80rpx;
}
.detail_footer{
  width:100%;
  height:90rpx;
  background:#fe6672;
  line-height:90rpx;
  font-size:34rpx;
  color:#fff;
  text-align: center;
  position:fixed;
  bottom:0;
  z-index:99;
}
.blank{
  width:100%;
  height:100rpx;
}
.comment .listit {
 position:relative;
}
.comment .listit image{
  width:100rpx;
  height:100rpx;
  border-radius: 100rpx;
  margin-top:20rpx;

}
.comment .listit text{
  position:absolute;
  top:20px;
  font-size:34rpx;
}
.comment .listcom{
  font-size:30rpx;
  padding-left:30rpx;
}
.comment .listtime{
  font-size:28rpx;
  padding-left:30rpx;
  color:#ccc;
  margin-top:20rpx;

}
.listright{
  position:relative;
  right:30rpx;
  bottom:40rpx;
}
.listright text{
  font-size:30rpx;
  color:#ccc;
  position: absolute;
  right:80rpx;
}
.listright image{
  position: absolute;
  right:30rpx;
  width:60rpx;
  height:60rpx;
}