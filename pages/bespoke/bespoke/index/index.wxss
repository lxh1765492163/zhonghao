/* pages/default/bespoke/index/index.wxss */
@import '../../../component/float/menu.wxss';

.header{
  width:100%;
  height:88rpx;
  background:#fff;
}
.header navigator{
  font-size:34rpx;
  margin-left:20rpx;
}
swiper{
  height:400rpx;
}
image{
  width:100%;
  height:100%;
}
.tab{
  width:100%;
  height:88rpx;
  font-size:30rpx;
  background:#fff;
  line-height:88rpx;
  border-bottom:1px solid #ccc;
}
.all{
  width:200rpx;
  /* background:blue; */
  text-align:center;
  display: inline-block;
}
.all .vertical{
  float:right;
  color:#ccc;
}
.scroll-view_H{
  width: 100%;
  white-space: nowrap;
}
.scroll-view_H .active{
  color:#fe6672;
}
.content{
  width:100%;
  height:240rpx;
  background:#fff;

}
.content image{
  width:180rpx;
  height:180rpx;
  float:left;
  margin-top:30rpx;
  margin-left:30rpx;
}
.content .detail{
  float:left;
  width:68%;
  margin-top:30rpx;
  height:180rpx;
  /* background:blue; */
  margin-left:30rpx;
}
.content .detail view{
  font-size:30rpx;
}
.content .detail .title{
  font-size:40rpx;
  color:#626262;
  overflow: hidden;
}
.content .detail .name{
  color:#acacac;
}
.content .detail .time{
   color:#acacac;
   width:100%;
   height:40rpx;
}
.content .detail .time .door{
  background:#ffc573;
  color:#fff;
  margin-right:30rpx;
  float:right;
}
.content .detail .time .store{
  background:#fe6672;
  color:#fff;
    float:right; 
    margin-right:30rpx;
}
.content .detail .price text{
   color:#fe6672;
   float:left;
}
.content .detail .price .cost{
  font-size:40rpx;
  font-weight:600;

}
.content .detail .price .gray{
  font-size:30rpx;
  text-decoration: line-through;
  color:#acacac;
  margin-top:10rpx;
}
.blank{
  width:100%;
  height:90rpx;
}
.footer{
  width:100%;
  height:100rpx;
  /* background:red; */
  position:fixed;
  bottom:0;
  z-index:99;
}
.footer .index{
  width:33.3%;
  height:100%;
  background:#fff;
  float:left;
}
.footer .index image{
  width:50rpx;
  height:50rpx;
  margin-left:100rpx;
  display:block;
}
.footer .index .font{
  font-size:30rpx;
  width:100%;
  text-align:center;
}
.red{
    color:#f00;
}
