/* pages/default/bespoke/order/order.wxss */
.order_tab{
  width:100%;
  height:90rpx;
  background:#fff;
}
.red{
    color:#f00;
}
.order_tab .make{
  width:33.3%;
  float:left;
  font-size:32rpx;
  text-align:center;
  height:90rpx;
  line-height:90rpx;
}
.order_tab .make .active{
  display:inline-block;
  height:90rpx;
  border-bottom:1px solid #fe6672;
  color:#fe6672;
}
.order_content{
  width:100%;
  height:150rpx;
  background:#fff;
  margin-top:20rpx;
}
.order_content .order_item{
  width:90%;
  height:120rpx;
  /* background:blue; */
  font-size:34rpx;
  padding-top:20rpx;
  margin-left:20rpx;
  margin-top:10rpx;
  float:left;
}
.order_item .order_title .createtime{
  float:right;
  color:#acacac;
}
.order_item  .order_price{
  margin-top:10rpx;
  color:#acacac;
}
.order_item  .order_price .state{
  margin-left:30rpx;
}
.arrow{
  float:left;
  width:40rpx;
  height:50rpx;
  margin-top:50rpx;
  margin-left:5rpx;
  color:#acacac;
  
}
.no_order{
  width:200rpx;
  height:100rpx;
  font-size:30rpx;
  position:absolute;
  top:50%;
  left:50%;
  margin-top:-50rpx;
  margin-left:-100rpx;
  text-align: center;
}
.no_order .at{
  margin-top:50rpx;
  width:180rpx;
  height:80rpx;
  background:#fe6672;
  border-radius: 5rpx;
  text-align:center;
  line-height:80rpx;
  color:#fff;
}
.blank{
  width:100%;
  height:90rpx;
}
.footer{
  width:100%;
  height:100rpx;
  /* background:red; */
  position:fixed;
  bottom:0;
  z-index:99;
}
.footer .index{
  width:33.3%;
  height:100%;
  background:#fff;
  float:left;
}
.footer .index image{
  width:50rpx;
  height:50rpx;
  margin-left:100rpx;
  display:block;
}
.footer .index .font{
  font-size:30rpx;
  width:100%;
  text-align:center;
}