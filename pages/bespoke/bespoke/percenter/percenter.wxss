/* pages/default/bespoke/percenter/percenter.wxss */
.header{
  width:100%;
  height:350rpx;
  background:pink;
}
.header .stro{
 width:40%;
 height:200rpx;
 margin-left:30rpx;
}
.header .stro image{
  width:150rpx;
  height:150rpx;
  border-radius: 150rpx;
  margin-top:100rpx;
  float:left;
}
.header .stro .name{
  float:left;
  margin-top:100rpx;
  margin-left:20rpx;
  color:#fff;
  font-size: 36rpx;
}
.menu{
  width:100%;
  height:160rpx;
   background:#fff; 
}
.menu .menu_list{
  width:33%;
  /* background:pink; */
  height:100%;
  float:left;
}
.menu .menu_list view{
  width:100%;
  text-align: center;
  font-size:30rpx;
}
.menu .menu_list view:first-child{
  color:#fe6672;
  font-size:60rpx;
}
.menu .menu_list:nth-child(2){
  border-left:1px solid #ccc;
}
.menu .menu_list:nth-child(3){
  border-left:1px solid #ccc;
}
.menu .menu_list:nth-child(2) view:first-child{
  color:orange;
}
.menu .menu_list:nth-child(3) view:first-child{
  color:#1488F5;
  font-size:30rpx;
  padding-top:30rpx;
}
.content_list{
  margin-top:20rpx;
  background:#fff;
}
.content_list .line{
  width:100%;
  height:80rpx;
  background:#fff;
  padding:20rpx 0px 10rpx 20rpx;
}
.content_list .line image{
  width:50rpx;
  height:50rpx;
  float:left;
}
.content_list .line .myorder{
  font-size:34rpx;
  float:left;
  width:88%;
  /* background:#1488F5; */
  height:80rpx;
  border-bottom:1px solid #ccc;
  margin-left:20rpx;

}
.content_list .line .myorder text:nth-child(2){
  float:right;
  margin-right:50rpx;
  color:#ccc;
}
.blank{
  width:100%;
  height:90rpx;
}
.footer{
  width:100%;
  height:100rpx;
  /* background:red; */
  position:fixed;
  bottom:0;
  z-index:99;
}
.footer .index{
  width:33.3%;
  height:100%;
  background:#fff;
  float:left;
}
.footer .index image{
  width:50rpx;
  height:50rpx;
  margin-left:100rpx;
  display:block;
}
.footer .index .font{
  font-size:30rpx;
  width:100%;
  text-align:center;
}
.red{
    color:#f00;
}