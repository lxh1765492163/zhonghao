page {
    font-size: 32rpx;
}

.header {
    width: 100%;
    height: 200rpx;
    background: #fea23b;
    position: relative;
}

.avator {
    width: 140rpx;
    height: 140rpx;
    position: absolute;
    left: 30rpx;
    top: 50%;
    margin-top: -70rpx;
}

.avator image {
    width: 100%;
    height: 100%;
    border-radius: 140rpx;
}

.nickname {
    position: absolute;
    left: 180rpx;
    font-size: 32rpx;
    font-weight: 700;
    top: 40rpx;
}

.nickname .text {
    font-weight: 400;
}

.referee {
    width: 100%;
    height: 100rpx;
    background: #fff;
     margin-top: 20rpx; 
     margin-bottom: 20rpx; 
    /* padding-left: 30rpx; */
    line-height: 100rpx;
}
.referee text{
    padding-left:30rpx;
}
.userblock {
    width: 100%;
    height: 400rpx;
    background:#fff;
    margin-bottom:20rpx;
}

.userblock .comprice {
    width: 96%;
    height: 200rpx;
    border-bottom: 1px solid #ccc;
    margin: 0 auto;
}

.userblock .comprice .num {
    padding-top: 60rpx;
    font-size: 38rpx;
    padding-left: 25rpx;
    color:#fea23b;
}

.userblock .comprice .title {
    padding-left: 20rpx;
    color:#333;
}

.userblock .line {
    width: 96%;
    margin: 0 auto;
}

.userblock .line .text {
    width: 60%;
    float: left;
}

.userblock .line .text .num {
    padding-top: 60rpx;
    font-size: 38rpx;
    padding-left: 30rpx;
       color:#fea23b;
}

.userblock .line .text .title {
    padding-left: 25rpx;
       color:#333;
}

.userblock .line {
    position: relative;
    height: 200rpx;
    width: 100%;
}

.userblock .line .btn {
    position: absolute;
    top: 50%;
    margin-top: -40rpx;
    right: 10rpx;
    background: #FE5455;
    color: #fff;
    border-radius: 40rpx;
    border: 1px solid #FE5455;
}
