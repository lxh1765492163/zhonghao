.article-index-page .fui-content,.article-list-page .fui-content {
	background: #fafafa
}

.fui-article-page {
	padding: .5rem;
	background: #fff
}

.fui-article-page .fui-article-title {
	font-size: 1.2rem
}

.fui-article-page .fui-article-subtitle {
	overflow: hidden;
	height: auto;
	color: #8c8c8c;
	font-size: .8rem
}

.fui-article-page .fui-article-subtitle navigator {
	color: #607fa6
}

.fui-article-page .fui-article-subtitle .nav {
	float: left;
	padding-top: .3rem;
	font-size: .75rem
}

.fui-article-page .fui-article-subtitle .nav.right {
	float: right
}

.fui-article-page .fui-article-subtitle .nav.padding {
	padding-left: .3rem
}

.fui-article-page .fui-article-content {
	padding-top: .2rem
}

.fui-article-page .fui-article-content .fui-article-notread {
	display: none;
	margin: .5rem;
	padding-top: 2.5rem;
	height: 8rem;
	border: .1rem dashed #999;
	background: #F4F4F4
}

.fui-article-page .fui-article-content .fui-article-notread view {
	color: #666;
	text-align: center;
	font-size: .8rem;
	line-height: 1.5rem
}

.fui-article-page .fui-article-content .fui-article-gps {
	padding-top: 2rem;
	padding-bottom: 5rem;
	color: #666;
	text-align: center;
	font-size: .8rem;
	line-height: 2rem
}

.fui-article-page .fui-article-content image {
	max-width: 100%;
	border: 0;
	vertical-align: bottom
}

.article-index-page .fui-list-group {
	margin-top: .3rem
}

.article-index-page .fui-list-group .round {
	border-radius: 2.5rem
}

.article-index-page .fui-line .text {
	color: #999
}

.article-index-page .fui-line.link:before {
	height: 0;
	border: 0
}

.article-index-page .fui-line.link .text {
	color: #607fa6
}

.article-index-page .fui-line:before {
	border-top: 1px dashed #999;
	background: 0 0
}

.article-index-page .swipe {
	height: auto;
	background: #f4f4f4
}

.article-index-page .swipe .inner {
	display: block;
	overflow: hidden;
	margin: 0 .5rem;
	padding: .5rem;
	background: #fff
}

.article-index-page .swipe image {
	width: 100%
}

.article-report-page .fui-cell-title {
	color: #999
}

.article-report-page .fui-cell-group {
	margin-top: 0
}

.article-report-page .fui-cell-group .fui-cell.fui-cell-textarea .fui-cell-label {
	margin-top: -4.8rem
}

.article-report-page .sub {
	display: block;
	margin-top: 2rem
}

.fui-article-list.template-0 .fui-list-media image,.fui-article-list.template-2 .fui-list-media image {
	width: 2.5rem;
	height: 2.5rem
}

.fui-article-list.template-0 {
	background: #fff
}

.fui-article-list.template-0 .topimg {
	padding-bottom: .5rem;
	height: auto
}

.fui-article-list.template-0 .topimg image {
	display: block;
	width: 100%;
	height: auto
}

.fui-article-list.template-0 .fui-list-group {
	margin-top: 0
}

.fui-article-list.template-1 navigator {
	color: #666
}

.fui-article-list.template-1 .fui-card-list {
	padding-bottom: .4rem
}

.fui-article-list.template-2 .fui-tab-scroll .item.on {
	color: #0cc
}

.fui-article-list.template-2 .fui-tab-scroll .item.on:before {
	background: #0cc
}

.fui-tab-scroll {
	position: relative;
	overflow-x: auto;
	overflow-y: hidden;
	height: 2rem;
	background: #fff;
	white-space: normal
}

.fui-tab-scroll:after {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 1px;
	background: #efefef;
	content: ""
}

.fui-tab-scroll .container {
	z-index: -1;
	overflow: auto;
	height: 2.4rem;
	white-space: nowrap
}

.fui-tab-scroll .item {
	overflow: hidden;
	padding: .25rem .5rem;
	width: auto;
	height: 2rem;
	color: #333;
	text-align: center;
	text-decoration: none;
	font-size: .7rem;
	line-height: 2rem
}

.fui-tab-scroll .item.on {
	position: relative;
	color: #ff6801;
	font-weight: 700
}

.fui-tab-scroll .item.on:before {
	position: absolute;
	bottom: -.2rem;
	left: 0;
	width: 100%;
	height: 2px;
	background: #ff6801;
	content: ""
}